<%- include('header.ejs') %>

<div class="flex-container">
  <h1>Create New Note</h1>
  <form action="/notes/new" method="post" class="flex-item">
    <label for="note-body">Note:</label><br />
    <textarea name="body" id="note-body" rows="8" cols="80" required></textarea
    ><br />
    <input type="submit" value="Create Note" />
  </form>
  <p><a href="/notes">View All Notes</a></p>
</div>

<style>
  .flex-container {
    background-color: #f5deb3; /* Papyrus color */
    font-family: Georgia;
    color: #333;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
  }

  .flex-item {
    flex: 1;
  }
</style>
