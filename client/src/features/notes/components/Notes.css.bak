/* Base styles */
.note-container {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-xs);
  padding: 0;
  max-width: 1200px;
  margin: 0 auto;
  min-height: 100vh;
}

.notes-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 0;
  padding: var(--spacing-xs) 0;
}

.search-location-container {
  display: flex;
  gap: var(--spacing-sm);
  align-items: center;
}

.title {
  font-size: 1.25rem;
  color: var(--text-primary);
  margin: 0;
}

.content-wrapper {
  display: grid;
  grid-template-columns: minmax(0, 1fr) minmax(0, 1fr);
  gap: var(--spacing-xs);
  align-items: start;
}

/* Loading states */
.loading,
.no-notes {
  text-align: center;
  padding: var(--spacing-lg);
  color: var(--text-secondary);
  font-size: 1rem;
}

/* Mobile styles */
@media (max-width: 1024px) {
  .content-wrapper {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 768px) {
  .note-container {
    padding: var(--spacing-sm);
  }
}
